<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#565C68">

    <TextView
        android:id="@+id/textView"
        android:layout_width="265dp"
        android:layout_height="54dp"
        android:text="@string/kuukausi_yhteenveto"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#4FD4EC"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127"
        tools:text="@string/kuukausi_yhteenveto" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart1"
        android:layout_width="415dp"
        android:layout_height="177dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.296" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart2"
        android:layout_width="365dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />

    <RadioGroup
        android:id="@+id/TimeGroup"
        android:layout_width="356dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="@string/aika"
            android:textSize="18sp" />


        <RadioButton
            android:id="@+id/time1"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="@string/_1_kk" />

        <RadioButton
            android:id="@+id/time2"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:text="@string/_3_kk" />

        <RadioButton
            android:id="@+id/time3"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:text="@string/_12_kk" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="229dp"
        android:layout_height="45dp"
        android:text="@string/painon_muutos"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#4FD4EC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596" />


</androidx.constraintlayout.widget.ConstraintLayout>